#!/bin/bash

custom_txt (){
cat <<EOF > "custom.txt"
### CUSTOMIZE IMAGE

# Boot Partition
ENABLE_VFAT="false"

# Root Filesystem Types: ext4 btrfs xfs
FSTYPE="ext4"

# Use a boot script instead of extlinux
ENABLE_BOOTCMD="false"

# UEFI Options (WIP)
ENABLE_EFI="false"

# Petitboot (AML ODROID) (not recommended)
ENABLE_PETITBOOT="false"

# Bootstrap: if false use debootstrap
MMDEBSTRAP="true"

# Image Size: 3584MB 4096MB
IMGSIZE="4096MB"

# Shrink Image
ENABLE_SHRINK="true"

# Compression Types: xz zst
IMG_COMPRESSION="xz"

### DO NOT EDIT BELOW THIS LINE
CUSTOM="$BUILDER"
EOF
}

kernel_txt (){
cat <<EOF > "kernel.txt"
### ADVANCED KERNEL PREFERENCES

# Kernel dot org
GIT_KERNELORG="true"
#LINUX_PATCHING="false"

# Github / Gitlab
#FORCE_GIT="false"
#GIT_OWN=""
#GIT_REPO=""
#GIT_BRANCH=""
#GIT_URL=""
#GIT_BLOB="blob"
# Patching
#GIT_PATCHING="false"
#GIT_PATCHDIR="patches/git/${BOARD}/${GIT_REPO}-${GIT_BRANCH}"

# Enable additional modules
#MODULES=""

# Custom linux logo
LINUX_LOGO="linux_clut224.ppm"

### DO NOT EDIT BELOW THIS LINE
KERNEL_PREFERENCES="$BUILDER"
EOF
sed -i "s/^#GIT_PATCHDIR=.*/#GIT_PATCHDIR="'"patches\/git\/${BOARD}\/${GIT_REPO}-${GIT_BRANCH}"'"/" kernel.txt
}

mirror_txt (){
cat <<EOF > "mirror.txt"
DEBIAN_MIRROR="http://deb.debian.org/debian"
DEVUAN_MIRROR="http://deb.devuan.org/merged"
KALI_MIRROR="http://http.kali.org/kali"
UBUNTU_MIRROR="http://ports.ubuntu.com/ubuntu-ports/"

### DO NOT EDIT BELOW THIS LINE
MIRROR_LIST="$BUILDER"
EOF
}

profile_txt (){
cat <<EOF > "profile.txt"
### USER DEFAULTS

#NAME="$MYNAME"
#USERNAME="$USER"
#PASSWORD="board"
#VERSION="6.6.y"
#COMPILER="gcc"
#CCACHE="$CCACHE"
#NETWORKMANAGER="$NETWORKMANAGER"
#RTW88="$RTW88"
#RTW88_DEVEL="$RTW88_DEVEL"
#USERACCT="$USERACCT"
#USER_PKGS="$USER_PKGS"
#LOCALE="$LOCALE"
#LOCALE_LC_ALL="$LOCALE_LC_ALL"
#TIMEZONE="$TIMEZONE" 
#NAMESERVER1="$NAMESERVER1"
#NAMESERVER2="$NAMESERVER2"

### DO NOT EDIT BELOW THIS LINE
USER_PROFILE="$PROFILE"
EOF
}
